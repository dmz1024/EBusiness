<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ln_top">
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="输入手机验证码"
            android:gravity="center"
            android:textSize="@dimen/sp15"
            android:textColor="@color/color_333"
            android:paddingTop="@dimen/size20"
            android:paddingBottom="@dimen/size20"
            android:background="@color/color_fff"
            android:layout_marginLeft="@dimen/size20"/>
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:paddingRight="@dimen/size20">
           <TextView
               android:id="@+id/tvCode"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentRight="true"
               android:layout_centerVertical="true"
               android:background="@drawable/shape_login_code"
               android:gravity="center"
               android:paddingBottom="5dp"
               android:paddingLeft="6dp"
               android:paddingRight="6dp"
               android:paddingTop="5dp"
               android:text="发送验证码"
               android:textColor="@color/color_fff"
               android:textSize="13sp" />

           <TextView
               android:id="@+id/tvCodeTime"
               android:visibility="gone"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignBottom="@id/tvCode"
               android:layout_centerVertical="true"
               android:layout_alignLeft="@id/tvCode"
               android:layout_alignRight="@id/tvCode"
               android:layout_alignTop="@id/tvCode"
               android:background="@drawable/shape_login_code_check"
               android:gravity="center"
               android:text="59S"
               android:textColor="#fff"
               android:textSize="15sp" />
       </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ln_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_pay_circle"
        android:orientation="horizontal"
        android:layout_below="@+id/ln_top">

        <TextView
            android:id="@+id/pass1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size10"
            android:layout_marginTop="@dimen/size10"
            android:layout_weight="1"
            android:gravity="center"

            android:textColor="@color/color_333"
            android:textSize="@dimen/sp30" />

        <View
            android:layout_width="@dimen/size0.5"
            android:layout_height="match_parent"
            android:background="@color/color_999" />

        <TextView
            android:id="@+id/pass2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size10"
            android:layout_marginTop="@dimen/size10"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/color_333"
            android:textSize="@dimen/sp30"
            />

        <View
            android:layout_width="@dimen/size0.5"
            android:layout_height="match_parent"
            android:background="@color/color_999" />

        <TextView
            android:id="@+id/pass3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size10"
            android:layout_marginTop="@dimen/size10"
            android:layout_weight="1"
            android:gravity="center"

            android:textColor="@color/color_333"
            android:textSize="@dimen/sp30" />

        <View
            android:layout_width="@dimen/size0.5"
            android:layout_height="match_parent"
            android:background="@color/color_999" />

        <TextView
            android:id="@+id/pass4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size10"
            android:layout_marginTop="@dimen/size10"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/color_333"
            android:textSize="@dimen/sp30" />

        <View
            android:layout_width="@dimen/size0.5"
            android:layout_height="match_parent"
            android:background="@color/color_999" />

        <TextView
            android:id="@+id/pass5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size10"
            android:layout_marginTop="@dimen/size10"
            android:layout_weight="1"
            android:gravity="center"

            android:textSize="@dimen/sp30"
            android:textColor="@color/color_333"/>

        <View
            android:layout_width="@dimen/size0.5"
            android:layout_height="match_parent"
            android:background="@color/color_999" />

        <TextView
            android:id="@+id/pass6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size10"
            android:layout_marginTop="@dimen/size10"
            android:layout_weight="1"
            android:gravity="center"

            android:textSize="@dimen/sp30"
            android:textColor="@color/color_333"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ln_center"
        android:layout_marginTop="@dimen/size20"
        android:background="@color/color_fff">
    </android.support.v7.widget.RecyclerView>
</RelativeLayout>