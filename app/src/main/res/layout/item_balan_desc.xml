<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:paddingLeft="@dimen/size10"
    android:paddingRight="@dimen/size10"
    android:paddingTop="@dimen/size15">

    <ImageView
        android:id="@+id/ivTitle"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/tvMoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="-￥100.00"
        android:textColor="@color/color_333"
        android:textSize="@dimen/sp14" />


    <LinearLayout
        android:id="@+id/llInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/size5"
        android:layout_marginRight="@dimen/size5"
        android:layout_toLeftOf="@id/tvMoney"
        android:layout_toRightOf="@id/ivTitle"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="middle"
            android:singleLine="true"
            android:text="SPACE空间消费"
            android:textColor="@color/color_333"
            android:textSize="@dimen/sp14" />

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9-21  10:00"
            android:textColor="@color/color_999"
            android:textSize="@dimen/sp12" />
    </LinearLayout>
    <View
        android:layout_marginLeft="@dimen/size10"
        android:layout_marginRight="@dimen/size10"
        android:layout_below="@id/llInfo"
        android:layout_marginTop="@dimen/size10"
        android:background="@color/color_e9eaec"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"/>
</RelativeLayout>