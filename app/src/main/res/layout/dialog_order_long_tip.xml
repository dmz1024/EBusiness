<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/color_fff"
    app:cardCornerRadius="@dimen/size5"
    app:contentPadding="@dimen/size15">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivCha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:src="@mipmap/icon_chahao" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size0.5"
            android:layout_marginTop="@dimen/size10"
            android:background="#f6f6f6" />


        <LinearLayout
            android:layout_marginTop="@dimen/size10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="短暂外出："
                android:textColor="@color/color_f00"
                android:textSize="@dimen/sp14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:lineSpacingExtra="@dimen/size3"
                android:layout_height="wrap_content"
                android:text="计费不会停止，需保证账户余额充足，空间仅保留15分钟，超时将自动结束该订单"
                android:textColor="@color/color_333"
                android:textSize="@dimen/sp14" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/size10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="结束使用："
                android:textColor="@color/color_f00"
                android:textSize="@dimen/sp14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:lineSpacingExtra="@dimen/size3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="结束订单前请先保证所有人员走出空间并关好房门，之后进行付款结束订单"
                android:textColor="@color/color_333"
                android:textSize="@dimen/sp14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/size20"
            android:orientation="horizontal">

            <Button
                android:layout_width="@dimen/size130"
                android:layout_height="@dimen/size40"
                android:layout_gravity="center"
                android:alpha="0.7"
                android:text="结束使用"
                android:textColor="#333"
                android:textSize="@dimen/sp15" />

            <Button
                android:id="@+id/btOut"
                android:layout_width="@dimen/size130"
                android:layout_height="@dimen/size40"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/size15"
                android:text="短暂外出"
                android:textColor="#333"
                android:textSize="@dimen/sp15" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>