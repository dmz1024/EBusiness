<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    android:paddingTop="@dimen/size25">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tvShopName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/size5"
            android:drawableRight="@mipmap/icon_wallet_password_arrow"
            android:gravity="center_vertical"
            android:text="SPACE-望京店"
            android:textColor="@color/color_333"
            android:textSize="@dimen/sp15" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvTimeTip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/size40"
        android:gravity="center_vertical"
        android:text="使用时长"
        android:textColor="@color/color_666"
        android:textSize="@dimen/sp13" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:text="01:20:10"
        android:textColor="@color/color_333"
        android:textSize="45sp" />

    <Button
        android:id="@+id/btYan"
        android:layout_width="75dp"
        android:layout_height="25dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shape_login_code"
        android:text="我要延时"
        android:textColor="@color/color_333"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tvMoneyTip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/size4"
        android:drawablePadding="@dimen/size5"
        android:drawableRight="@mipmap/icon_tanhao1"
        android:gravity="center_vertical"
        android:text="空间费累计100.00元"
        android:textColor="@color/color_666"
        android:textSize="@dimen/sp14" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size40"
        android:layout_marginRight="@dimen/size40"
        android:layout_marginTop="@dimen/size40">

        <ImageView
            android:id="@+id/ivClose"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:background="?android:attr/selectableItemBackground"
            android:scaleType="center"
            android:src="@mipmap/icon_kaiguan" />

        <FrameLayout
            android:id="@+id/fg_qw"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dp"
            android:background="@drawable/shape_main_bottom_qw">

            <TextView
                android:id="@+id/tvOpen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawablePadding="5dp"
                android:drawableTop="@mipmap/icon_saoyisao"
                android:gravity="center"
                android:text="长按开门"
                android:textColor="#333"
                android:textSize="15sp" />
        </FrameLayout>

        <ImageView

            android:id="@+id/ivMore"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="?android:attr/selectableItemBackground"
            android:scaleType="center"
            android:src="@mipmap/icon_gengduo" />
    </RelativeLayout>


    <ImageView
        android:id="@+id/ivAd"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="@dimen/size15"

        />
</LinearLayout>