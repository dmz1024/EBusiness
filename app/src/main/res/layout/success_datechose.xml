<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_show"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginLeft="@dimen/size10"
        android:layout_marginTop="@dimen/size10"
        android:src="@color/color_ffc730"
        android:layout_marginBottom="@dimen/size10"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="@dimen/size10"
        android:layout_marginTop="@dimen/size10"
        android:layout_marginRight="@dimen/size10"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/img_show"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp15"
            android:textColor="@color/color_333"
            android:text="@string/str_commen" />
        <TextView
            android:id="@+id/tv_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp15"
            android:textColor="@color/color_666"
            android:text="@string/str_commen" />
        <TextView
            android:id="@+id/tv_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp15"
            android:textColor="@color/color_666"
            android:text="@string/str_commen" />
    </LinearLayout>
    <TextView
        android:layout_below="@id/img_show"
        android:id="@+id/tvTime"
        android:gravity="center"
        android:padding="@dimen/size10"
        android:background="@color/color_f8f8fa"
        android:textColor="@color/color_666"
        android:textSize="@dimen/sp15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recy_item"
        android:layout_above="@+id/ln_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tvTime"/>


    <LinearLayout
        android:id="@+id/ln_bottom"
        android:background="@color/color_f8f8fa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textColor="@color/color_666"
            android:textSize="@dimen/sp15"
            android:text="费用"
            android:paddingBottom="@dimen/size10"
            android:paddingTop="@dimen/size10"
            android:paddingLeft="@dimen/size10"/>
        <TextView
            android:id="@+id/tv_detail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/color_666"
            android:textSize="@dimen/sp15"
            android:text="明细"
            android:gravity="center"
            android:paddingBottom="@dimen/size10"
            android:paddingTop="@dimen/size10"
            android:paddingLeft="@dimen/size10"/>
        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textColor="@color/color_666"
            android:textSize="@dimen/sp15"
            android:text="费用"
            android:paddingBottom="@dimen/size10"
            android:paddingTop="@dimen/size10"
            android:paddingLeft="@dimen/size10"
            android:gravity="center"
            android:background="@color/color_ffc730"/>
    </LinearLayout>
</RelativeLayout>