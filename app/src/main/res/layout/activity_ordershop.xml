<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_fff"
        android:paddingBottom="@dimen/size10"
        android:paddingLeft="@dimen/size10">

        <ImageView
            android:id="@+id/img_show"
            android:layout_width="@dimen/size110"
            android:layout_height="@dimen/size70"
            android:layout_marginTop="@dimen/size10"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="@dimen/size10"
            android:layout_marginRight="@dimen/size10"
            android:layout_marginTop="@dimen/size10"
            android:layout_toRightOf="@+id/img_show"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/str_commen"
                android:textColor="@color/color_333"
                android:textSize="@dimen/sp15" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size3"
                android:text="@string/str_commen"
                android:textColor="@color/color_666"
                android:textSize="@dimen/sp14" />

            <TextView
                android:id="@+id/tv_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size3"
                android:text="@string/str_commen"
                android:textColor="@color/color_666"
                android:textSize="@dimen/sp14" />
        </LinearLayout>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recy_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_name"
        android:layout_marginTop="@dimen/size10"
        android:background="@color/color_fff" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recy_item"
        android:background="@color/color_fff"
        android:drawableRight="@mipmap/you_icon"
        android:padding="@dimen/size15"
        android:text="有疑问 ? 联系客服"
        android:textColor="@color/color_666"
        android:textSize="@dimen/sp14"/>
</RelativeLayout>