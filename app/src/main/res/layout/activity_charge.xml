<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_fff"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_money"
            style="@style/tv_ma_wra_right_min_style"
            android:layout_margin="@dimen/size10"
            android:gravity="start"
            android:text="账户常用余额50.00"
            android:textSize="@dimen/sp18" />

        <TextView
            style="@style/tv_ma_wra_right_min_style"
            android:layout_marginLeft="@dimen/size10"
            android:layout_marginTop="0dp"
            android:gravity="start"
            android:text="充值金额" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
        </RelativeLayout>


        <TextView
            style="@style/tv_ma_wra_right_min_style"
            android:layout_marginLeft="@dimen/size10"
            android:gravity="start"
            android:text="选择支付方式" />

        <RadioGroup
            android:id="@+id/rg_pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rb_wechat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size20"
                android:layout_marginRight="@dimen/size20"
                android:layout_marginTop="@dimen/size20"
                android:button="@null"
                android:drawableLeft="@mipmap/icon_recharge_wechat"
                android:drawablePadding="@dimen/size15"
                android:drawableRight="@drawable/selector_pay_chose"
                android:text="微信支付"
                android:textColor="@color/color_333"
                android:textSize="@dimen/sp15" />

            <RadioButton
                android:id="@+id/rb_pay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size20"
                android:layout_marginRight="@dimen/size20"
                android:layout_marginTop="@dimen/size20"
                android:button="@null"
                android:checked="true"
                android:drawableLeft="@mipmap/icon_recharge_alipay"
                android:drawablePadding="@dimen/size15"
                android:drawableRight="@drawable/selector_pay_chose"
                android:text="支付宝支付"
                android:textColor="@color/color_333"
                android:textSize="@dimen/sp15" />
        </RadioGroup>

        <TextView
            android:id="@+id/tv_submit"
            style="@style/tv_but_style"
            android:text="立即充值" />

    </LinearLayout>
</LinearLayout>
