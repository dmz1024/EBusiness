<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_f8f8fa">

    <RelativeLayout
        android:id="@+id/rl_ue_show"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size200">

        <ImageView
            android:id="@+id/img_ue_pic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@color/color_ffc730" />

        <TextView
            android:id="@+id/tv_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/color_9999"
            android:gravity="center"
            android:paddingBottom="@dimen/size3"
            android:paddingLeft="@dimen/size10"
            android:paddingRight="@dimen/size10"
            android:paddingTop="@dimen/size3"
            android:text="@string/str_commen"
            android:textColor="@color/color_ffc730"
            android:textSize="@dimen/sp15" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_ue_user"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size70"
        android:layout_below="@id/rl_ue_show"
        android:layout_margin="@dimen/size10"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/img_head"
            android:layout_width="60dp"
            android:layout_height="60dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/img_head"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size10"
                android:text="@string/str_commen"
                android:textColor="@color/color_666"
                android:textSize="@dimen/sp14" />

            <TextView
                android:id="@+id/tv_office"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size10"
                android:layout_marginTop="@dimen/size5"
                android:text="@string/str_commen"
                android:textColor="@color/color_999"
                android:textSize="@dimen/sp14" />
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/img_yinhao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/yinhao_icon"
        android:layout_below="@+id/rl_ue_user"
        android:layout_marginLeft="@dimen/size10" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_ue_user"
        android:paddingBottom="@dimen/size10"
        android:paddingLeft="@dimen/size5"
        android:paddingRight="@dimen/size10"
        android:text="@string/str_commen"
        android:textColor="@color/color_666"
        android:textSize="@dimen/sp14"
        android:layout_toRightOf="@+id/img_yinhao"/>
</RelativeLayout>