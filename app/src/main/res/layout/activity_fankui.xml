<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/color_f6f6f6">


    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.dmz.library.dmzapi.view.custom.DmzBar
            android:id="@+id/dmzBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|enterAlways" />
    </android.support.design.widget.AppBarLayout>


    <Spinner
        android:id="@+id/sp_chose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/size10"
        >
    </Spinner>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size150"
        android:background="@color/color_fff"
        android:layout_marginTop="@dimen/size10">
        <EditText
            android:id="@+id/et_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_fff"
            android:hint="问题描述（必填）"
            android:gravity="start"
            android:layout_margin="@dimen/size10"
            android:textSize="@dimen/sp16"
            android:textColorHint="@color/color_999"
            android:textColor="@color/color_666"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ln_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size120"
        android:background="@color/color_fff"
        android:layout_marginTop="@dimen/size10"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="@dimen/size100"
            android:layout_height="@dimen/size100"
            android:layout_marginLeft="@dimen/size10"
            android:layout_marginRight="@dimen/size10"
            android:src="@mipmap/icon_tanhao"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_submit"
        style="@style/tv_but_style"
        android:text="提交反馈"/>
</LinearLayout>