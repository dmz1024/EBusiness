<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/color_fff"
    app:cardCornerRadius="@dimen/size5"
    app:contentPadding="@dimen/size15">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivCha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:src="@mipmap/icon_chahao" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size0.5"
            android:layout_marginTop="@dimen/size10"
            android:background="#f6f6f6" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size10"
            android:text="短暂外出需保证余额充足"
            android:textColor="@color/color_f00"
            android:textSize="@dimen/sp14" />

        <TextView
            android:id="@+id/tvMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size10"
            android:lineSpacingExtra="@dimen/size10"
            android:text="目前消费金额：100元\n账号可用余额：10元\n至少充值金额：90元"
            android:textColor="@color/color_333"
            android:textSize="@dimen/sp14" />

        <Button
            android:id="@+id/btChoog"
            android:textSize="@dimen/sp15"
            android:textColor="#333"
            android:text="马上充值"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/size20"
            android:layout_width="@dimen/size130"
            android:layout_height="@dimen/size40" />
    </LinearLayout>
</android.support.v7.widget.CardView>