<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        style="@style/ln_ma_wr_ver_styles"
        android:layout_marginTop="0.5dp"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_total"
            style="@style/tv_wr_min_15sp_style"
            android:layout_marginTop="20dp"
            android:text="10.00"
            android:textSize="25sp" />

        <TextView
            style="@style/tv_wr_min_15sp_style"
            android:text="总余额(元)"
            android:textColor="@color/color_999" />

        <LinearLayout
            style="@style/ln_ma_wr_ho_styles"
            android:layout_marginBottom="@dimen/size20"
            android:layout_marginTop="@dimen/size20">

            <LinearLayout
                style="@style/ln_ma_wr_ver_styles"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_charge"
                    style="@style/tv_wr_min_15sp_style"
                    android:text="10.00"
                    android:textSize="@dimen/sp18" />

                <TextView
                    style="@style/tv_wr_min_15sp_style"
                    android:text="充值余额(元)"
                    android:textColor="@color/color_999" />
            </LinearLayout>

            <LinearLayout
                style="@style/ln_ma_wr_ver_styles"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_give"
                    style="@style/tv_wr_min_15sp_style"
                    android:text="10.00"
                    android:textSize="@dimen/sp18" />

                <TextView
                    style="@style/tv_wr_min_15sp_style"
                    android:text="赠送余额(元)"
                    android:textColor="@color/color_999" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        style="@style/ln_ma_ma_ver_style"
        android:layout_marginTop="@dimen/size10">

        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size20"
            android:background="@drawable/shape_fill_square"
            android:gravity="center"
            android:padding="10dp"
            android:text="充值" />

        <TextView
            android:id="@+id/tv_xieyi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size20"
            android:layout_marginRight="@dimen/size20"
            android:paddingLeft="@dimen/size5"
            android:paddingRight="@dimen/size5"
            android:text="@string/tv_cz_xieyi"
            android:textColor="@color/color_999"
            android:textSize="@dimen/sp14" />
    </LinearLayout>


</LinearLayout>