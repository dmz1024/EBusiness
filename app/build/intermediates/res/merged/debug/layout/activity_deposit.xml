<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.dmz.library.dmzapi.view.custom.DmzBar
            android:id="@+id/dmzBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|enterAlways" />
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            style="@style/ln_ma_wr_ver_styles"
            android:layout_marginTop="0.5dp"
            android:gravity="center"
            android:paddingBottom="40dp">

            <TextView
                android:id="@+id/tv_total"
                style="@style/tv_wr_min_15sp_style"
                android:layout_marginTop="40dp"
                android:text="10.00"
                android:textSize="25sp" />

            <TextView
                style="@style/tv_wr_min_15sp_style"
                android:text="我的押金(元)"
                android:textColor="@color/color_999" />
        </LinearLayout>

        <LinearLayout
            style="@style/ln_ma_ma_ver_style"
            android:layout_marginTop="@dimen/size10">

            <TextView
                android:id="@+id/tv_show"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_f00"
                android:textSize="@dimen/sp13"
                android:gravity="center"
                android:text="@string/string_deposit_text"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/size20"
                android:background="@drawable/shape_fill_square"
                android:gravity="center"
                android:padding="10dp"
                android:text="退押金" />
            <TextView
                android:id="@+id/tv_xieyi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_999"
                android:textSize="@dimen/sp13"
                android:gravity="center"
                android:text="@string/string_deposit_xieyi" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>