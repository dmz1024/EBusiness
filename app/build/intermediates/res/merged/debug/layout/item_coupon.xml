<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground">

    <FrameLayout
        android:id="@+id/cdView"
        android:background="@drawable/shape_fff_e1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size10">

        <LinearLayout
            style="@style/ln_ma_wr_ver_styles"
            android:background="@null"
            android:paddingLeft="0dp"
            android:paddingRight="0dp">

            <LinearLayout
                style="@style/ln_ma_ma_ho_style"
                android:paddingLeft="@dimen/size10"
                android:paddingRight="@dimen/size10">

                <TextView
                    android:id="@+id/tv_name"
                    style="@style/tv_wr_min_15sp_style"
                    android:layout_marginTop="@dimen/size10"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="代金券"
                    android:textSize="@dimen/size15" />

                <TextView
                    android:id="@+id/tv_money"
                    style="@style/tv_ma_wra_right_min_style"
                    android:layout_marginLeft="@dimen/size10"
                    android:text="￥ 15"
                    android:textSize="@dimen/size15" />
            </LinearLayout>


            <LinearLayout
                style="@style/ln_ma_ma_ho_style"
                android:paddingRight="@dimen/size10">

                <TextView
                    android:id="@+id/tv_date"
                    style="@style/tv_wr_min_15sp_style"
                    android:layout_marginTop="@dimen/size10"
                    android:paddingLeft="@dimen/size10"
                    android:text="有效期值"
                    android:textColor="@color/color_999"
                    android:textSize="@dimen/size14" />

                <TextView
                    android:id="@+id/tv_user"
                    style="@style/tv_ma_wra_right_min_style"
                    android:layout_marginLeft="@dimen/size10"
                    android:text="满100可用"
                    android:textColor="@color/color_999"
                    android:textSize="@dimen/size14" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:layout_marginTop="@dimen/size10"
                android:background="@drawable/shape_line_style"
                android:layerType="software" />

            <TextView
                android:id="@+id/tv_type"
                style="@style/tv_ma_wra_right_min_style"
                android:layout_marginBottom="@dimen/size10"
                android:layout_marginTop="@dimen/size5"
                android:gravity="start"
                android:paddingLeft="@dimen/size10"
                android:paddingRight="@dimen/size10"
                android:text="仅限首单使用"
                android:textColor="@color/color_999"
                android:textSize="@dimen/size14" />
        </LinearLayout>
    </FrameLayout>

    <View
        android:layout_width="@dimen/size20"
        android:layout_height="@dimen/size20"
        android:layout_alignBottom="@id/cdView"
        android:layout_marginBottom="@dimen/size26"
        android:layout_marginLeft="-2dp"
        android:background="@drawable/shape_circle_drawable" />

    <View
        android:layout_width="@dimen/size20"
        android:layout_height="@dimen/size20"
        android:layout_alignBottom="@id/cdView"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/size26"
        android:layout_marginLeft="@dimen/size12"
        android:background="@drawable/shape_circle_drawable" />

</RelativeLayout>