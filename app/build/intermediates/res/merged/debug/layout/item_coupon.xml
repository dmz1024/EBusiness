<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_f1f1f1"
    >

    <LinearLayout
        android:id="@+id/ln_money"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size90"
        android:orientation="vertical"
        android:background="@mipmap/yhq_bgt_huang_pic"
        android:layout_marginLeft="@dimen/size15"
        android:gravity="center"
        android:layout_marginTop="@dimen/size20">
        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_fff"
            android:textSize="@dimen/sp15"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_fff"
            android:textSize="@dimen/sp14"
            android:layout_marginTop="@dimen/size5"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ln_time"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size90"
        android:orientation="vertical"
        android:layout_marginRight="@dimen/size15"
        android:background="@mipmap/yhq_bgt_bai_pic"
        android:gravity="center_vertical"
        android:layout_toRightOf="@id/ln_money"
        android:layout_marginTop="@dimen/size20">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/coupon_circle_style"
            android:layout_marginTop="@dimen/size10"
            android:layout_marginBottom="@dimen/size10"
            android:layout_marginLeft="@dimen/size15"
            android:layout_marginRight="@dimen/size20"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/size10"
            android:paddingRight="@dimen/size10"
            >
            <TextView
                android:id="@+id/tv_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_666"
                android:textSize="@dimen/sp14"
                android:singleLine="true"
                android:ellipsize="end"
                />
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_666"
                android:textSize="@dimen/sp14"
                android:layout_marginTop="@dimen/size5"
                />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>