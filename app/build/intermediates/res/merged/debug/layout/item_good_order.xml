<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    android:paddingBottom="@dimen/size5"
    android:paddingLeft="@dimen/size10"
    android:paddingRight="@dimen/size10"
    android:paddingTop="@dimen/size10">

    <TextView
        android:id="@+id/tvStatusInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_999"
        android:textSize="@dimen/sp13" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size5"
        app:cardBackgroundColor="@color/color_f8f8fa"
        app:cardCornerRadius="@dimen/size3"
        app:contentPaddingBottom="@dimen/size15"
        app:contentPaddingLeft="@dimen/size10"
        app:contentPaddingRight="@dimen/size10"
        app:contentPaddingTop="@dimen/size15">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:drawablePadding="@dimen/size5"
                android:drawableRight="@mipmap/icon_wallet_password_arrow"
                android:gravity="center_vertical"
                android:text="国庆专项"
                android:textColor="@color/color_999"
                android:textSize="@dimen/sp13" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="@dimen/size10"
                android:layout_toLeftOf="@id/tvStatus"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="国庆专项"
                android:textColor="@color/color_333"
                android:textSize="@dimen/sp16" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvTitle"
                android:layout_marginTop="@dimen/size10">

                <ImageView
                    android:id="@+id/ivGoodImg"
                    android:layout_width="@dimen/size50"
                    android:layout_height="@dimen/size50"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/tvPrice"
                    android:textSize="@dimen/sp14"
                    android:textColor="@color/color_333"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvGoodName"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@id/tvPrice"
                    android:layout_marginRight="@dimen/size5"
                    android:textSize="@dimen/sp13"
                    android:maxLines="2"
                    android:textColor="@color/color_333"
                    android:ellipsize="end"
                    android:layout_toRightOf="@id/ivGoodImg"
                    android:layout_marginLeft="@dimen/size55"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvInfo"
                    android:layout_marginTop="@dimen/size5"
                    android:textSize="@dimen/sp13"
                    android:layout_alignLeft="@id/tvGoodName"
                    android:layout_below="@id/tvGoodName"
                    android:textColor="@color/color_999"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvCount"
                    android:layout_marginTop="@dimen/size5"
                    android:textSize="@dimen/sp14"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/tvGoodName"
                    android:textColor="@color/color_999"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </RelativeLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>