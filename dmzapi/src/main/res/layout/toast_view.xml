<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:paddingTop="5dp"
    android:paddingBottom="@dimen/size2"
    android:paddingLeft="@dimen/size12"
    android:paddingRight="@dimen/size15"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_b0000000">

    <ImageView
        android:id="@+id/ivImg"
        android:layout_centerVertical="true"
        android:layout_width="25dp"
        android:scaleType="fitXY"
        android:layout_marginRight="@dimen/size4"
        android:layout_height="25dp" />

    <TextView
        android:id="@+id/tvContent"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ivImg"
        android:text="你好啊"
        android:textColor="#fff"
        android:textSize="@dimen/sp14" />
</RelativeLayout>